<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#F8F8F8">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Analyser"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/importTextFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Text File"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/importPdfFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import PDF File"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/statisticsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Statistics:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/sentimentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sentiment Analysis:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/randomParagraphTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Paragraph:"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/sliderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Temperature for Random Generation (Current: 0.5)"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/temperatureSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="0.5"
        android:valueFrom="0.1"
        android:valueTo="1.0"
        android:stepSize="0.1" />

    <Button
        android:id="@+id/savePdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save to PDF"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/generateRandomParagraphButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Random Paragraph"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>